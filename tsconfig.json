{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2020",
		"moduleResolution": "node",
		"sourceMap": true,
		"removeComments": true,
		"rootDir": "./src",
		"outDir": "./dist",

		"resolveJsonModule": true,
		"lib": ["es2020"],
		"strict": false,
		"skipLibCheck": true,

		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,

		"baseUrl": ".",
		"paths": {
			"@modules/*": ["src/modules/*"],
			"@shared/*": ["src/shared/*"],
			"@config/*": ["src/config/*"]
		},
		"typeRoots": ["/node_modules/@types", "src/config/@types"]
	}
}
